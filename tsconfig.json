{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",

    "module": "CommonJS",
    "target": "ES2020",

    "types": ["node"],

    "sourceMap": true,

    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false
  },
  "include": ["src"]
}
